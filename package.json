{
  "name": "dnd-meta-game",
  "version": "1.0.0",
  "description": "D&D Meta Game - Time-based adventure system for solo play",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node --watch server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "offline": "npm run build && npm run start",
    "install-all": "npm install && cd client && npm install",
    "migrate-to-cloud": "node server/scripts/migrate-to-turso.js"
  },
  "keywords": [
    "dnd",
    "rpg",
    "meta-game"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@libsql/client": "^0.17.0",
    "better-sqlite3": "^11.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
