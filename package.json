{
  "name": "dnd-meta-game",
  "version": "1.0.0",
  "description": "D&D Meta Game - AI-powered solo D&D campaign management system",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node --watch server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "offline": "npm run build && npm run start",
    "install-all": "npm install && cd client && npm install",
    "migrate-to-cloud": "node server/scripts/migrate-to-turso.js",
    "backup": "node server/scripts/backup.js",
    "lint": "eslint server/",
    "lint:fix": "eslint server/ --fix"
  },
  "keywords": [
    "dnd",
    "rpg",
    "meta-game"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^10.0.1"
  }
}
